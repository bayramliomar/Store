@model string
@{
    ViewBag.Title = "Verify Google Authenticator";
}

<h2>Verify Google Authenticator</h2>

@using (Html.BeginForm("VerifyGoogleAuthenticator", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Enter the 6-digit code generated by Google Authenticator</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Authentication Code</label>
            <div class="col-md-10">
                <input type="text" name="authCode" class="form-control" placeholder="Enter code here" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Verify" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
